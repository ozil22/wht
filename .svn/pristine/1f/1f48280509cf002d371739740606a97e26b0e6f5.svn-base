package com.huashidai.weihuotong.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.huashidai.weihuotong.domain.Goods;
import com.huashidai.weihuotong.exception.LogicException;
import com.huashidai.weihuotong.query.GoodsQuery;
import com.huashidai.weihuotong.query.PageResult;
import com.huashidai.weihuotong.service.IGoodsService;
import com.huashidai.weihuotong.utils.AjaxResult;
import com.huashidai.weihuotong.utils.MethodAnnotation;
import com.huashidai.weihuotong.utils.MethodAnnotation.ResourceType;

@Controller
@RequestMapping("/goods")
public class GoodsCotroller {
	
	@Autowired
	IGoodsService goodsService;
	
	/**
	 * 在菜单栏中点击用户管理的之后,进入到这个页面的跳转
	 * @return
	 */
	@MethodAnnotation(name="商品主页",type=ResourceType.商品管理)
	@RequestMapping("/index")
	public String employee() {
		return "goods/goods";
	}

	/**
	 * 高级查询+分页
	 * @param req
	 * @return
	 */
	@MethodAnnotation(name="商品列表",type=ResourceType.商品管理)
	@RequestMapping("/query")
	@ResponseBody
	public PageResult<Goods> query(GoodsQuery qu) {
		PageResult<Goods> list = goodsService.query(qu);
		return list;
	}
	
	/**
	 * 删除商品
	 * @param id 商品id
	 * @return
	 */
	@MethodAnnotation(name="商品删除",type=ResourceType.商品管理)
	@RequestMapping("/delete")
	@ResponseBody
	public AjaxResult delete(Long id){
		AjaxResult ar ;
		try{
			goodsService.delete(id);

			ar= new AjaxResult("商品删除成功！！");
		}catch (LogicException e) {
			
			ar= new AjaxResult("商品删除失败:" + e.getMessage(),e.getErrorCode());
		}
		return ar;
	} 
	
	/**
	 * 
	 * 下架操作
	 */
	@MethodAnnotation(name="商品下架",type=ResourceType.商品管理)
	@RequestMapping("/leave")
	@ResponseBody
	public AjaxResult leave(Long id){
		AjaxResult ar ;
		try{
			goodsService.leave(id);
			
			ar= new AjaxResult("商品下架成功！！");
		}catch (LogicException e) {
			
			ar= new AjaxResult("商品下架失败！！",e.getErrorCode());
		}
		return ar;
	} 
	/**
	 * 
	 * 上架操作
	 */
	@MethodAnnotation(name="商品上架",type=ResourceType.商品管理)
	@RequestMapping("/up")
	@ResponseBody
	public AjaxResult up(Long id){
		AjaxResult ar ;
		try{
			goodsService.up(id);
			
			ar= new AjaxResult("商品上架成功！！");
		}catch (LogicException e) {
			
			ar= new AjaxResult("商品上架失败！！",e.getErrorCode());
		}
		return ar;
	} 
}
